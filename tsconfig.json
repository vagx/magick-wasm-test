{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"paths": {
			"~/*": ["src/*"]
		},
		"types": ["vite/client"]
	},
	"include": ["src/**/*.ts", "src/**/*.js"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
